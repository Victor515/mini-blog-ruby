<div class="container text-center">
  <h1 class="text-info">
    <%= @article.title %>
  </h1>
  <div class="bg-info">
    <p>
      <%= @article.text %>
    </p>
  </div>

  <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary"  %>
  <%= link_to 'Back', articles_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <h3>Comments</h3>
  <%= render @article.comments %>
</div>

<div class="container">
  <h3>Add a comment:</h3>
  <%= render 'comments/form' %>
</div>
