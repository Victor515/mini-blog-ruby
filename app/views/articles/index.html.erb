<body>
  <div>
    <div class="container text-center">
      <h1 class="text-info">All Articles</h1>
    </div>
  </div>


  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'View', article_path(article), class:"btn btn-xs btn-primary" %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class:"btn btn-xs btn-primary" %></td>
          <td><%= link_to 'Delete', article_path(article),
               method: :delete,
               data: { confirm: 'Are you sure?' },
               class:"btn btn-xs btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to 'Write new article', new_article_path, class:"btn btn-lg btn-primary" %>
  </div>
</body>
